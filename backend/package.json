{
  "name": "@voting-system/backend",
  "version": "1.0.0",
  "private": true,
  "description": "Backend API for secure voting system",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:security": "jest --testPathPattern=security",
    "migrate": "typeorm migration:run -d src/database/data-source.ts",
    "migrate:revert": "typeorm migration:revert -d src/database/data-source.ts",
    "seed": "ts-node src/database/seeds/run-seeds.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@voting-system/shared": "*",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "joi": "^17.11.0",
    "express-rate-limit": "^7.1.5",
    "rate-limit-redis": "^4.2.0",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "@aws-sdk/client-s3": "^3.478.0",
    "axios": "^1.6.2",
    "uuid": "^9.0.1",
    "crypto-js": "^4.2.0",
    "typeorm-encrypted": "^0.9.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/speakeasy": "^2.0.10",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^9.0.7",
    "@types/crypto-js": "^4.2.1",
    "@types/jest": "^29.5.10",
    "@types/supertest": "^6.0.2",
    "@types/node-cron": "^3.0.11",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3"
  }
}

